<% if type == :edit_user_form %>
  <% action_url = user_url(@user) %>
  <% button_text = "Update User" %>
<% elsif type == :new_user_form %>
  <% action_url = users_url %>
    <% button_text = "Create User" %>
<% end %>

<form action="<%= action_url %>" method="POST">
  <% if type == :edit_user_form %>
    <input type="hidden" name="_method" value="PATCH">
  <% end %>

  <label>Username:
    <input 
      type="text"
      name="user[username]"
      value="<%= @user.username %>"
      >
  </label>

    <br>
    <label>age:
  <input 
    type="text"
    name="user[age]"
    value="<%= @user.age %>"
    >
</label>

    <br>
    <label>email:
  <input 
    type="email"
    name="user[email]"
    value="<%= @user.email %>"
    >
</label>

    <br>
    <label>Political Affiliation:
  <input 
    type="text"
    name="user[political_affiliation]"
    value="<%= @user.political_affiliation %>"
    >
</label>

    <br>
    <label>Password:
  <input 
    type="password"
    name="user[password]"
    value="<%= @user.password %>"
    >
</label>

<br>
  <input type="submit" value="<%= button_text %>">
</form>